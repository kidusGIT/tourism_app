<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/tourism_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tourism_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:background="@drawable/border_image"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            />

        <TextView
            android:id="@+id/touersim_list_name"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="Torsim Name"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/delete_toursim_btn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_image"
            android:backgroundTint="#EC0C1F"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_baseline_delete_forever" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>