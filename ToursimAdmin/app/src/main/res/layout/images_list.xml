<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_list_card"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    android:background="@drawable/image_border_3"
    style="@style/change_background"
    android:elevation="12dp"
    android:clipToPadding="false"
    android:outlineProvider="bounds">

    <ImageView
        android:id="@+id/image_cover_list"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/border_image"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/delete_image_btn"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:background="@drawable/border_image"
        android:backgroundTint="#D50517"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_cover_list"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_baseline_delete_forever" />
</androidx.constraintlayout.widget.ConstraintLayout>