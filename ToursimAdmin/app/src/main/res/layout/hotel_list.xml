<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotel_card"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/border_image"
    style="@style/change_background"
    android:elevation="12dp"
    android:clipToPadding="false"
    android:outlineProvider="bounds"
    >

    <TextView
        android:id="@+id/hotel_name_list"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:text="Hotel Name"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/delete_hotel"
        app:layout_constraintStart_toEndOf="@+id/hotel_image_cover_list"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/delete_hotel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/image_border_3"
        android:backgroundTint="#D50517"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_baseline_delete_forever" />

    <ImageView
        android:id="@+id/hotel_image_cover_list"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/border_image"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>